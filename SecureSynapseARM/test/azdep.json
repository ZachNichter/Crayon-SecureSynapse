{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "adminPWD": {
            "type": "string",
            "defaultValue": "Test",
            "metadata": {
                "description": "Password for admin account"
            }
        },
        "virtualNetworks_vnet_name": {
            "type": "string",
            "defaultValue": "TestVnet",
            "metadata": {
                "description": "Vnet for deployment"
            }
        }
    },
    "resources": [
        {
            "name": "synapseVnets",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://templatesaz.blob.core.windows.net/securesynapsearm/test/child.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworks_vnet_name": {
                        "value": "[parameters('virtualNetworks_vnet_name')]"
                    }
                }
            }
        },
        {
            "name": "synapseVnets2",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-10-01",
            "dependsOn": ["[resourceId('Microsoft.Resources/deployments', 'synapseVnets')]"],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://templatesaz.blob.core.windows.net/securesynapsearm/test/child2.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "virtualNetworks_vnet_name": {
                        "value": "[reference('synapseVnets').outputs.childVnet.value]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "MyPassword": {
            "type": "string",
            "value": "[parameters('adminPWD')]"
        },
        "MyVnet": {
            "type": "string",
            "value": "[reference('synapseVnets').outputs.childVnet.value]"
        },
        "MyVnet2": {
            "type": "string",
            "value": "[reference('synapseVnets2').outputs.childVnet2.value]"
        }    
    }
}